
#include "libft.h"

//ft_substr("Bonjour comment ca va?", 5, 8);
//=> "ur comme"

char	*ft_substr(char const *s, unsigned int start, size_t len)
{
	char	*new;
	size_t	finish;
	size_t	slen;

	if (!s)
		return (NULL);
	slen = ft_strlen(s);
	finish = 0;
	if (start < slen)
		finish = slen - start;
	if (finish > len)
		finish = len;
	new = (char *)malloc(sizeof(char) * (finish + 1));
	if (!new)
		return (NULL);
	ft_strlcpy(new, s + start, finish + 1); 
	return (new);
}

